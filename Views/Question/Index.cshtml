                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.Option1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.Option2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.Option3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.Option4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.Option5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.Option6)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => question.CorrectAnswer)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => question.AnswerHint)
                </td>*@
