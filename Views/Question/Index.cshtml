                @Html.DisplayNameFor(model => model.First().Option4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Option5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Option6)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CorrectAnswer)
            </th>
