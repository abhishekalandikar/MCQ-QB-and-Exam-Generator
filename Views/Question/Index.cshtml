@model IEnumerable<QuestionBanks.Entities.Question>

@{
    ViewBag.Title = "Questions List";
}

<h2>Questions List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Question1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Option1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Option2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Option3)
            </th>
